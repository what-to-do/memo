<!-- this page created solely for testing of passport authentication -->

<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">  

    <!-- show any messages that come back with authentication -->
<!--     <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %> -->
    {{#if messageCheck}}
        <div class="alert alert-danger">{{this.message}}</div>
    {{/if}}
     <!-- LOGIN FORM -->
    <div class="panel panel-default">
        <div class="panel-heading">Login</div>
        <div class="panel-body text-center">
            <a class="btn btn-primary" href="/auth/facebook">
                <i class="fa fa-facebook"></i>
                Login With Facebook
            </a>
        </div>
    </div>
</div>
<script type="text/javascript>"
Handlebars.registerHelper('messageCheck', function(block) {
    if(this.message.length > 0) {
    return block.fn(this);
    }
});
</script>
</body>
</html>
